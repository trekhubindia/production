# ===========================================
# NOMADIC TRAVELS - ENVIRONMENT VARIABLES
# ===========================================

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Lucia Auth Configuration (Required)
LUCIA_SECRET=your_lucia_auth_secret_key

# App URLs (Required)
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXT_PUBLIC_BASE_URL=https://yourdomain.com
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Email Configuration (Required for notifications)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# AI Chatbot Configuration (Required for chatbot)
GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key
GEMINI_API_KEY=your_gemini_api_key
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key

# Stripe Configuration (Required for payments)
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Google Analytics (Optional)
GOOGLE_ANALYTICS_PROPERTY_ID=your_ga_property_id
GOOGLE_SERVICE_ACCOUNT_KEY=your_service_account_json

# Database URL (Optional - for direct connections)
DATABASE_URL=your_database_connection_string

# Map Integration (Optional)
NEXT_PUBLIC_OPENROUTESERVICE_API_KEY=your_openrouteservice_api_key

# Cron Jobs (Optional)
CRON_SECRET_TOKEN=your_cron_secret_token
CRON_SECRET=your_faq_cron_secret
